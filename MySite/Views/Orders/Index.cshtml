@model IEnumerable<MySite.Models.Order>

@{
    ViewData["Title"] = "Замовлення";
    ViewData["CreateAction"] = "Create";
}

@await Html.PartialAsync("_DBList")

<h2 class="table-title"></h2>
<partial name="_CRUDToolBar" />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Користувач</th>
            <th>Кошик</th>
            <th>Дата замовлення</th>
            <th>Сума</th>
            <th>Адреса</th>
            <th>Статус</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody id="itemsTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.User.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Cart.UserId)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@($"{item.TotalAmount} ₴")</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
