@model IEnumerable<MySite.Models.Cart>

@{
    ViewData["Title"] = "Кошики";
    ViewData["CreateAction"] = "Create";
}

@await Html.PartialAsync("_DBList")

<h2 class="table-title"></h2>
<partial name="_CRUDToolBar" />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Користувач</th>
            <th>Ідентифікатор замовлення</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody id="itemsTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.User.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CartId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CartId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CartId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

