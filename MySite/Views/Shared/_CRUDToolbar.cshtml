@{
    var createAction = ViewData["CreateAction"] ?? "Create";
    var tableTitle = ViewData["Title"] ?? "Таблиця";
}

<div class="tools-bar">
    <div class="left">
        <a asp-action="@createAction" class="btn btn-success">Додати</a>
    </div>
    <div class="center">
        <h3>@tableTitle</h3>
    </div>
    <div class="right">
        <input type="text" id="searchInput" class="form-control" placeholder="Пошук..." />
        <button type="button" id="searchButton" class="btn btn-secondary">Пошук</button>
    </div>
</div>

<script>
    function searchItems() {
        var input = document.getElementById("searchInput").value.toLowerCase();
        var table = document.getElementById("itemsTableBody");
        var rows = table.getElementsByTagName("tr");

        for (var i = 0; i < rows.length; i++) {
            var cells = rows[i].getElementsByTagName("td");
            var itemName = cells[0]?.innerText.toLowerCase() || '';

            if (itemName.includes(input)) {
                rows[i].style.display = "";
            } else {
                rows[i].style.display = "none";
            }
        }
    }
</script>


<style>
    .tools-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
    }

        .tools-bar .left {
            flex: 1;
        }

        .tools-bar .center {
            flex: 1;
            text-align: center;
        }

        .tools-bar .right {
            flex: 1;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

            .tools-bar .right input {
                margin-right: 5px;
            }
</style>
