@page
@model LoginModel

@{
    ViewData["Title"] = "Вхід";
}

<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<div class="log-window">
    <h2>З поверненням!</h2>

    <div class="log_reg">
        <div class="tab">
            <a href="~/Identity/Account/Login" class="active">Увійти</a>
        </div>
        <div class="tab">
            <a href="~/Identity/Account/Register">Зареєструватись</a>
        </div>
    </div>

    <form id="account" method="post" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.Email" for="email">Пошта</label>
            <input asp-for="Input.Email" id="email" class="form-control" placeholder="Email пошта" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password" for="password">Пароль</label>
            <div class="password-container">
                <input asp-for="Input.Password" id="password" class="form-control" placeholder="Пароль" required />
                <button type="button" class="password-toggle">
                    <img src="~/imgs/eye.png" alt="Іконка-Ока">
                </button>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="login-btn">Увійти</button>

        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password">Забули пароль?</a>
            </p>


        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
